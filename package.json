{
  "name": "template-reactjs",
  "private": true,
  "version": "0.0.16",
  "type": "module",
  "scripts": {
    "build": "node ./config/pre-build.js --mode development",
    "dev": "vite --host --port=80",
    "eslint": "npx eslint . --fix",
    "eslint:check": "npx eslint .",
    "lint:check": "pnpm eslint:check && pnpm prettier:check",
    "lint:fix": "pnpm eslint && pnpm prettier",
    "lint": "node ./config/pre-build.js --ignore-build --fix",
    "prepare": "husky",
    "prettier": "prettier -w .",
    "prettier:check": "prettier -c .",
    "preview": "vite preview --host",
    "start": "pnpm run dev",
    "update": "ncu",
    "update:check": "ncu --interactive --format group"
  },
  "dependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-angular": "^19.5.0",
    "lint-staged": "^15.2.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "8.57.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "gradient-string": "^3.0.0",
    "husky": "^9.1.6",
    "npm-check-updates": "^17.1.10",
    "prettier": "^3.3.3",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">=20.6.1",
    "npm": "please-use-pnpm",
    "pnpm": ">9.0.0",
    "yarn": "please-use-pnpm"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier -w",
      "eslint . --fix"
    ],
    "*.{html,css,md,json}": [
      "prettier -w"
    ]
  }
}
